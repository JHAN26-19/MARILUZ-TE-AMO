<body>
  <h1>TE AMO ðŸ’–</h1>

  <!-- MÃšSICA -->
  <audio id="musica" autoplay loop>
    <source src="https://n.uguu.se/ddlDKZhU.mp3" type="audio/mpeg">
    Tu navegador no soporta audio.
  </audio>

  <script>
    // Reproducir mÃºsica con primer toque
    const audio = document.getElementById('musica');
    document.body.addEventListener('click', () => {
      if (audio.paused) audio.play().catch(()=>{});

      // Crear varios "TE AMO ðŸ’–" brillantes
      for (let i = 0; i < 10; i++) {
        const love = document.createElement('div');
        love.className = 'teamo';
        love.innerText = 'TE AMO ðŸ’–';
        love.style.left = `${Math.random() * window.innerWidth}px`;
        love.style.top = `${Math.random() * window.innerHeight}px`;
        love.style.setProperty('--x', `${(Math.random() - 0.5) * 300}px`);
        love.style.setProperty('--y', `${(Math.random() - 0.5) * 300}px`);
        document.body.appendChild(love);
        setTimeout(() => love.remove(), 2000);
      }
    });

    // Lluvia infinita de "TE QUIERO ðŸ’˜"
    function lluviaTeQuiero() {
      const t = document.createElement('div');
      t.className = 'tequiero';
      t.innerText = 'TE QUIERO ðŸ’˜';
      t.style.left = `${Math.random() * window.innerWidth}px`;
      t.style.fontSize = `${16 + Math.random() * 20}px`;
      document.body.appendChild(t);
      setTimeout(() => t.remove(), 6000);
    }

    setInterval(lluviaTeQuiero, 300); // Cada 300ms cae uno nuevo
  </script>
</body>
</html>
